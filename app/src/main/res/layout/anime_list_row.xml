<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> itemClickListener.animeClicked(anime)}"
        android:layout_margin="6dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/anime_list_image"
                    avatar="@{anime.image_url}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_image"
                    android:contentDescription="TODO" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:background="@color/colorAccent"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <TextView
                android:id="@+id/anime_list_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="10dp"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@{anime.title}"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="italic" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <data>
        <variable
            name="anime"
            type="com.dimi.animeapp.model.Anime" />

        <variable
            name="itemClickListener"
            type="com.dimi.animeapp.util.AnimeListCustomClickListener" />
    </data>
</layout>